<%= form_for @employee do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <%= f.label :cell %>
  <%= f.text_field :cell %>
  <%= f.select :rights_class, [['Server', 1], ['Manager', 2]] %>
  <%= f.submit  %>
<% end %>
